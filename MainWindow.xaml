<Window x:Class="P1_AP1_Felix_20180570.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P1_AP1_Felix_20180570"
        mc:Ignorable="d"
        Title="Menu Principal" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Menu Height="30" FontSize="18">
                <MenuItem Header="Registros" >
                    <MenuItem x:Name="AportesMenuItem" Header="Registro de Aportes" Click="AportesMenuItem_Click" />
                </MenuItem>

                <MenuItem Header="Consultas">
                    <MenuItem x:Name="ConsultaAportesMenuItem" Header="Consulta de Aportes" Click="ConsultaAportesMenuItem_Click"/>
                </MenuItem>

                <MenuItem Header="Ayuda">
                    <Menu/>
                </MenuItem>
            </Menu>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,146,0,0"  >

                <Button x:Name="AportesButton" Click="AportesButton_Click" Width="232" Height="82"  >
                    <StackPanel Orientation="Horizontal" >
                        <Image Source="/Resources/user1.png"  />
                        <Label Content="Registro de Aportes"  />
                    </StackPanel>
                </Button>

                <Button x:Name="CAportesButton" Width="232" Height="81" Margin="71,0,0,0"  Click="CAportesButton_Click"  >
                    <StackPanel Orientation="Horizontal" >
                        <Image Source="/Resources/Consulta.png"   />
                        <Label Content="Consulta de Aportes" Width="112" />
                    </StackPanel>
                </Button>

            </StackPanel>

        </StackPanel>

    </Grid>
</Window>
